{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MDed",
  "version": "2.0.0",
  "identifier": "com.mded.app",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev:frontend",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MDed",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 300,
        "minHeight": 200,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "Copyright Â© 2024 MDed",
    "shortDescription": "Minimalistic Markdown Editor",
    "longDescription": "MDed is a minimalistic markdown editor with VisionOS glassmorphism design. Features include system tray integration, global shortcuts, quick note capture, and cross-platform support.",
    "category": "Utility",
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "installerIcon": "icons/icon.png",
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      },
      "frameworks": [],
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": [],
        "section": "editors",
        "priority": "optional",
        "desktopTemplate": "mded.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "rpm": {
        "depends": [],
        "release": "1"
      }
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "mimeType": "text/markdown",
        "description": "Markdown Document",
        "role": "Editor"
      }
    ]
  },
  "plugins": {}
}
