{
  "name": "mded",
  "version": "1.0.0",
  "description": "Minimalistic Markdown Editor with VisionOS glassmorphism design",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron . --no-sandbox",
    "build": "tsc && esbuild src/renderer/app.ts --bundle --outfile=dist/renderer/app.js --platform=browser",
    "dev": "npm run build && electron . --no-sandbox",
    "watch": "tsc --watch & esbuild src/renderer/app.ts --bundle --outfile=dist/renderer/app.js --platform=browser --watch",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "glassmorphism"
  ],
  "author": "henilptel <henilptel@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.1",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^11.1.0"
  },
  "build": {
    "appId": "com.mded.app",
    "productName": "MDed",
    "files": [
      "dist/**/*",
      "index.html",
      "quick-note.html",
      "styles.css",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}